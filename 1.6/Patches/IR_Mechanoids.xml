<?xml version="1.0" encoding="UTF-8"?>

<Patch>

	<Operation Class="PatchOperationAdd">
		<xpath>Defs/ThingDef[@Name="BaseMechanoid"]/comps</xpath>
		<value>
      		<li>
      		  <compClass>InfiniteReinforce.ThingComp_Reinforce</compClass>
